{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./lib",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app": ["./src"],
      "@app/*": ["./src/*"]
    }
  },
  "include": ["src/core/**/*.ts", "src/utils/**/*.ts"]
}
